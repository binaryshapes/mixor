{
  "nodeModulesDir": "manual",
  "workspace": ["packages/core", "packages/components"],
  "fmt": {
    "singleQuote": true,
    "semiColons": true,
    "trailingCommas": "onlyMultiLine",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "lint": {
    "include": [
      "packages/**/src/**/*.ts",
      "packages/**/tests/**/*.ts",
      "commitlint.config.ts",
      "scripts/*.ts"
    ]
  },
  "test": {
    "include": ["packages/**/tests/**/*.test.ts"]
  },
  "tasks": {
    "dev": "deno run --watch",
    "build": "deno bundle --minify -o dist/bundle.js",
    "fmt": "deno fmt",
    "test": "deno test --coverage",
    "commitlint": "deno run --allow-run ./scripts/commitlint.ts"
  },
  "imports": {
    "@commitlint/cli": "npm:@commitlint/cli@^20.1.0",
    "@commitlint/config-conventional": "npm:@commitlint/config-conventional@^20.0.0",
    "@commitlint/prompt-cli": "npm:@commitlint/prompt-cli@^20.1.0",
    "@commitlint/types": "npm:@commitlint/types@^20.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}
